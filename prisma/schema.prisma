generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id      String   @id @default(cuid())
  name    String
  ownerId String
  User    User     @relation(fields: [ownerId], references: [id])
  Lesson  Lesson[]
}

model Lesson {
  id                String              @id @default(cuid())
  title             String
  courseId          String?
  createdAt         DateTime            @default(now())
  audioPath         String?
  Course            Course?             @relation(fields: [courseId], references: [id])
  Material          Material[]
  Slide             Slide[]
  TranscriptSegment TranscriptSegment[]
}

model Material {
  id        String       @id @default(cuid())
  lessonId  String
  type      MaterialType
  filePath  String
  createdAt DateTime     @default(now())
  Lesson    Lesson       @relation(fields: [lessonId], references: [id])
}

model Slide {
  id       String @id @default(cuid())
  lessonId String
  order    Int
  filePath String
  Lesson   Lesson @relation(fields: [lessonId], references: [id])
}

model TranscriptSegment {
  id         String @id @default(cuid())
  lessonId   String
  text       String
  startTime  Float
  endTime    Float
  slideIndex Int?
  Lesson     Lesson @relation(fields: [lessonId], references: [id])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  name         String
  role         Role
  passwordHash String
  passwordSalt String
  createdAt    DateTime @default(now())
  Course       Course[]
}

enum MaterialType {
  PDF
  IMAGE
  VIDEO
}

enum Role {
  PROFESSOR
  ALUNO
}
